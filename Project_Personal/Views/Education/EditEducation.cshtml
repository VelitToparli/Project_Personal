@model Project_Personal.Models.TblEducation


@{
    ViewBag.Title = "EditEducation";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Eğitim Düzenleme Sayfası</h2>

<form method="post">
    <label>Eğitim ID</label>
    @Html.TextBoxFor(x => x.EducationID, new { @class = "form-control" })
    <br />

    <label>Eğitim Başlığı</label>
    @Html.TextBoxFor(x => x.EducationTitle, new { @class = "form-control" })
    <br />

    <label>Eğitim Tarihi</label>
    @Html.TextBoxFor(x => x.EduationDate, new { @class = "form-control" })
    <br />

    <label>Eğitim Açıklaması</label>
    @Html.TextBoxFor(x => x.EducationDescription, new { @class = "form-control" })
    <button class="btn btn-primary">Eğitim Güncelle</button>
</form>
